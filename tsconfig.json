    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "noImplicitAny": false,
    "types": ["node", "mocha"],
    "skipLibCheck": true,
    "strict": true,
    "downlevelIteration": true,
  },
  "include": [
    "./src/**/*.ts",
  ]
}
